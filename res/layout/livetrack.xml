        android:background="@drawable/logoutbutnor" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="293dp"
        android:layout_height="315dp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android1:layout_alignParentEnd="false"
        android1:layout_marginLeft="13dp"
        android1:layout_marginTop="129dp" />

    <ToggleButton
        android1:id="@+id/showmap"
        android1:layout_width="50dp"
        android1:layout_height="50dp"
        android:textOff=""
        android:textOn=""
        android1:layout_alignBottom="@+id/map"
        android1:layout_alignLeft="@+id/map"
        android1:background="@drawable/togglebutton"
        android1:checked="false" />

</RelativeLayout>