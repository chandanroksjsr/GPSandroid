<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    style="@style/MyTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/listbg" >

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android1:layout_alignParentEnd="false" />

            <RadioGroup
                android1:id="@+id/radioGroup1"
                android1:layout_width="150dp"
                android1:layout_height="wrap_content"
                android1:layout_alignParentBottom="true"
                android1:layout_alignParentLeft="true"
                android1:layout_marginBottom="7dp"
                android1:layout_marginLeft="5dp"
                android1:gravity="center"
                android1:orientation="horizontal" >

                <RadioButton
                    android1:id="@+id/radiomap"
                    android1:layout_width="match_parent"
                    android1:layout_height="wrap_content"
                    android1:layout_weight="1"
                    android1:background="@drawable/mapleftradio"
                    android1:button="@null"
                    android1:checked="true"
                    android1:gravity="center"
                    android1:padding="5dp"
                    android1:text="Map"
                    android1:textColor="@drawable/mapradiotext" />

                <RadioButton
                    android1:id="@+id/radiosatellite"
                    android1:layout_width="match_parent"
                    android1:layout_height="wrap_content"
                    android1:layout_weight="1"
                    android1:background="@drawable/maprightradio"
                    android1:button="@null"
                    android1:gravity="center"
                    android1:padding="5dp"
                    android1:text="Satellite"
                    android1:textColor="@drawable/mapradiotext" />
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>