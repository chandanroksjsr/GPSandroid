<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:id="@+id/relativelay"
   
    android:background="@drawable/loginnormal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <Button
        android:id="@+id/reset"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/signin"
        android:layout_alignBottom="@+id/signin"
        android:layout_alignRight="@+id/pswd"
        android:layout_marginRight="20dp"
        android:background="@drawable/resetbutnormal" />

    <EditText
        android:id="@+id/username"
        style="@style/custom"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="182dp"
        android:background="#00000000"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
        android:ems="10"
        android:hint="@string/Username"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <EditText
        android:id="@+id/pswd"
        style="@style/custom"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp"
        android:background="#00000000"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
        android:ems="10"
        android:hint="@string/pswd"
        android:inputType="textPassword"
        android:singleLine="true" />

    <Button
        android:id="@+id/signin"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_below="@+id/pswd"
        android:layout_marginRight="39dp"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/reset"
        android:background="@drawable/loginbutnormal" />

</RelativeLayout>