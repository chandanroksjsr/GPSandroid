<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     style="@style/AppTheme"
     android:id="@+id/alertlayout"
    android:background="@drawable/alertnormal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/sendbutnormal" />

    <TextView
        android:id="@+id/textView1"
        style="@style/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:text="@string/welcome"
        android:textColor="#000000" />

    <Button
        android:id="@+id/logingout"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/logoutbutnor" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/clearmessagebutnormal" />

    <TextView
        android:id="@+id/username"
        style="@style/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="80dp"
        android:text="TextView"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/e6"
        style="@style/custom"
        android:layout_width="294dp"
        android:background="@drawable/roundedtext"
        android:layout_height="125dp"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
         android:gravity="top|left"
        android:scrollHorizontally="true"
        android:shadowRadius="5"
        android:ems="10" >

        <requestFocus />
    </EditText>

</RelativeLayout>