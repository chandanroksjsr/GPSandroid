<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
     android:id="@+id/alertlayout"
    android:background="@drawable/alertxtra"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        style="@style/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="210dp"
        android:text="@string/welcome"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/username"
        style="@style/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="210dp"
        android:text="thendral"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/e6"
        style="@style/custom"
        android:layout_width="750dp"
        android:layout_height="335dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/roundedtext"
        android:ems="10"
        android:gravity="top|left"
        android:scrollHorizontally="true"
        android:shadowRadius="5"
        android:textSize="14dip" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/username"
        android:layout_marginLeft="29dp"
        android:background="@drawable/sendextrabut" />

    <Button
        android:id="@+id/logingout"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/e6"
        android:layout_alignTop="@+id/username"
        android:layout_marginRight="58dp"
        android:background="@drawable/logoutextrabut" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/logingout"
        android:layout_below="@+id/e6"
        android:layout_marginRight="48dp"
        android:layout_marginTop="129dp"
        android:background="@drawable/clearmessageextrabut" />

</RelativeLayout>