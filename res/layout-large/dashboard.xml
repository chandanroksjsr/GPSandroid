<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashlarge"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/welcomeusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/welcome"
        android:layout_alignBottom="@+id/welcome"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="220dp"
        android:layout_toRightOf="@+id/welcome"
        android:text="thendral"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="220dp"
        android:text="@string/welcome"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="215dp"
        android:background="@drawable/logoutbutlarge" />

    <Button
        android:id="@+id/aboutus"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/welcomeusername"
        android:layout_marginBottom="28dp"
        android:background="@drawable/aboutusbutlarge" />

    <Button
        android:id="@+id/contactus"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/aboutus"
        android:layout_alignBottom="@+id/aboutus"
        android:layout_alignRight="@+id/logout"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/contactbutlarge" />

    <ListView
        android:id="@+id/list"
        android:layout_width="550dp"
        android:layout_height="600dp"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true" >
    </ListView>

</RelativeLayout>