<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loginlarge"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <Button
        android:id="@+id/signin"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="550dip"
        android:background="@drawable/loginbutlarge" />

    <Button
        android:id="@+id/reset"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="550dip"
        android:background="@drawable/resetbutlarge" />

    <EditText
        android:id="@+id/username"
        style="@style/custom"
        android:layout_width="340dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="150dip"
        android:layout_marginTop="377dip"
        android:background="#00000000"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
        android:ems="10"
        android:hint="@string/Username"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="" >
      
    </EditText>

    <EditText
        android:id="@+id/pswd"
        style="@style/custom"
        android:layout_width="340dip"
        android:layout_height="50dip"
        android:layout_marginLeft="150dip"
        android:layout_marginTop="454dip"
        android:hint="@string/pswd"
        android:background="#00000000"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
        android:ems="10"
        android:inputType="textPassword"
        android:singleLine="true" />

</RelativeLayout>