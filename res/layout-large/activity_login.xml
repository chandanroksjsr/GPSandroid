<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:id="@+id/relativelay"
     android:layout_marginRight="10dip"
    android:background="@drawable/loginpage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <Button
        android:id="@+id/signin"
        android:layout_width="110dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="550dip"
        android:background="@drawable/loginbutton" />

    <Button
        android:id="@+id/reset"
        android:layout_width="110dip"
        android:layout_height="40dip"
        android:layout_marginLeft="360dip"
        android:layout_marginTop="550dip"
        android:background="@drawable/resetbutton" />

    <EditText
        android:id="@+id/username"
        style="@style/custom"
        android:layout_width="340dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="150dip"
        android:layout_marginTop="377dip"
        android:background="#00000000"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
        android:ems="10"
        android:hint="@string/Username"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="" >
      
    </EditText>

    <EditText
        android:id="@+id/pswd"
        style="@style/custom"
        android:layout_width="340dip"
        android:layout_height="50dip"
        android:layout_marginLeft="150dip"
        android:layout_marginTop="454dip"
        android:hint="@string/pswd"
        android:background="#00000000"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
        android:ems="10"
        android:inputType="textPassword"
        android:singleLine="true" />

</RelativeLayout>