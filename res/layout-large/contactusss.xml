<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mylinearconta"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/contactnormal"
              android:paddingTop="10dip"
              android:paddingBottom="10dip"
              android:paddingLeft="20dip"
              android:paddingRight="20dip"
              android:weightSum="10">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.7"
                    android:gravity="center"
                    android:orientation="vertical" >

      <ImageView
                android:id="@+id/avatar"
                android:scaleType="fitStart"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:src="@drawable/click" />
 </LinearLayout>

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_gravity="center"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="13dp"
       android:layout_weight="1.9"
       android:orientation="vertical" >

   <EditText
       android:id="@+id/e1"
       style="@style/custom"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1.0"
       android:background="@drawable/rounded_edittext"
       android:ems="10"
       android:hint="@string/firstname"
       android:padding="5dip"
       android:singleLine="true" >

        <requestFocus />
    </EditText>
   
        
<View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    >
</View>

<EditText
        android:id="@+id/e2"
        style="@style/custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:padding="5dip" 
       android:layout_weight="1.0"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:singleLine = "true"
        android:maxLines = "1"
        android:lines = "1"
        android:hint="@string/lastname"
       />
   <View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    >
</View>

 

 <EditText
        android:id="@+id/e3"
        style="@style/custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    android:layout_weight="1.0"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:singleLine = "true"
        android:maxLines = "1"
        android:lines = "1"
        android:padding="5dip" 
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        />
        
  <View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    >
</View>
 
     
      
 
    <EditText
        android:id="@+id/e4"
        style="@style/custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      
      android:layout_weight="1.0"
      
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:singleLine = "true"
        android:maxLines = "1"
        android:lines = "1"
        android:hint="@string/orgname"
        android:padding="5dip" />
        
    <View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    >
</View>
    
      
   <EditText
        android:id="@+id/e5"
        style="@style/custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
       android:layout_weight="1.0"
        android:singleLine = "true"
        android:maxLines = "1"
        android:lines = "1"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/mobnumb"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="5dip" />
        
     
  <View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    >
</View>
   
    <EditText
        android:id="@+id/e6"
        style="@style/custom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
  android:layout_weight="1.0"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="top|left"
        android:hint="@string/addrs"
        android:maxLines="5"
        android:padding="5dip"
        android:textSize="14sp" />
        
        
   <View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    >
</View>
    
     
  
      <EditText
        android:id="@+id/e8"
        style="@style/custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      android:layout_weight="1.0"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:singleLine = "true"
        android:maxLines = "1"
        android:lines = "1"
        android:hint="@string/city"
        android:padding="5dip" />
         
   <View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    >
</View>
      
  
    <EditText
        android:id="@+id/e9"
        style="@style/custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
       android:layout_weight="1.0"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:singleLine = "true"
        android:maxLines = "1"
        android:lines = "1"
        android:hint="@string/state"
        android:padding="5dip" />
         
     </LinearLayout>
<View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    >
</View>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="3.4"
    android:orientation="vertical" >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:orientation="horizontal"
             android:weightSum="4" >

<Button
            android:id="@+id/btn2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
                android:layout_weight="1"
          
            android:background="@drawable/contactusbutnormal" />
         
<TextView
            android:id="@+id/btrn2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
               
          />

<Button
    android:id="@+id/btn3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clearmessagebutnormal" />
       
   </LinearLayout>
</LinearLayout>
      

    

</LinearLayout>